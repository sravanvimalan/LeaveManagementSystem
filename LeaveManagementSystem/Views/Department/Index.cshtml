@model List<LeaveManagementSystem.ViewModel.ListAllDepartmentAndVirtualHeadViewModel>
@{
    ViewBag.Title = "Department";
}
<style>
    .container 
    {
        width:900px;
    }
</style>
<h2>Department</h2>
<a href="~/department/adddepartment" class="btn btn-primary" style="float:right;">Add Department</a><br /><br />
<div class="container my-2">
    <div class="card">
        <div class="card-body">
            <div class="container my-5">
                <p class="my-5">

                </p>
                <div class="col-md-11">
                    
                    <div th:case="*">
                        <table class="table table-striped table-responsive-md">
                            <thead>
                                <tr>
                                    <th>Department Name</th>
                                    <th>Virtual Team Head</th>

                                    <th>Edit</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                 @foreach (var item in Model)
                                 {
                                <tr>
                                    <td>@item.DepartmentName</td>
                                    <td>@item.VirtualHeadName</td>

                                    <td>
                                        <a href="~/department/ChangeVirtualHead/@item.EmployeeID"
                                           class="btn btn-success">
                                            <i class="fas fa-user-edit ml-2"></i>
                                        </a>
                                    </td>
                                    
                                </tr>
                                 }
                                
                               
                                    
                                

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>