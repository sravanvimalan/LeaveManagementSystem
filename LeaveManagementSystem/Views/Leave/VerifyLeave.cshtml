@model List<LeaveManagementSystem.ViewModel.RequestVacationViewModel>
@{
    ViewBag.Title = "VerifyLeave";
}




@*@{
    ViewBag.Title = "VerifyRequest";
}*@
<br />
<h4>VerifyRequest</h4>
<br />
<form action="~/Leave/VerifyLeave" method="post">
    
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Designation</th>
                <th scope="col">No Of Days</th>
                <th scope="col">From Date</th>
                <th scope="col">To Date</th>
                <th scope="col">VacationType</th>

                <th scope="col">Accept/Reject</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var item in Model)
            {
               
            <tr>
                <td>@item.Creater.FirstName @item.Creater.MiddleName @item.Creater.LastName</td>
                <td>@item.Creater.Designation.DesignationName</td>
                <td align="center">@item.NoOfDays</td>

                <th style="font-weight: normal;">@item.FromDate.ToShortDateString()</th>
                <td>@item.ToDate.ToShortDateString()</td>
                <td>@item.VacationType.VacationName</td>
                @if(item.LeaveStatus == "Pending")
                {
                    <td><a href="~/Leave/LeaveDetail/@item.RequestID" class="btn btn-info">Request Details</a></td>
                }
                else
                {
                    <td>@item.LeaveStatus</td>
                }


            </tr>
            }




        </tbody>
    </table>
</form>